# Copy to .env and fill values for your environment
# Choose one of two setups below:

# ============================================
# OPTION A: Local Development with Docker
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bank
DB_USER=postgres
DB_PASS=postgres

# ============================================
# OPTION B: Neon Cloud Database
# ============================================
# DB_HOST=your-project.neon.tech
# DB_PORT=5432
# DB_NAME=neondb
# DB_USER=neondb_owner
# DB_PASS=your-secure-password-from-neon

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION=3600000

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_CONNECTION_TIMEOUT=5000

# Optional: external service URLs
OAUTH_ISSUER_URI=https://your-issuer-uri.com
OAUTH_JWK_SET_URI=https://your-jwk-set-uri.com
